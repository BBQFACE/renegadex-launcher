                              VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="125" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="500" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                   Source="/Assets/Search.png"
                                   Width="15"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="Search for server:"
                                       Margin="0,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource ListHeaderTextColor}" />

                            <Image Name="FilterOptionsImage"
                                   Grid.Column="2"
                                   Source="/Assets/MoreOptions.png"
                                   Width="10"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center" />

                            <xctk:WatermarkTextBox Grid.Column="3"
                                                   Background="Transparent"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource InfoTextColor2}"
                                                   CaretBrush="{StaticResource DarkYellowColorBrush}"
                                                   BorderThickness="0"
                                                   Margin="10,0,10,0"
                                                   Text="{Binding ServersView.SearchString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                                <xctk:WatermarkTextBox.Watermark>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Enter Server Name"
                                                   Margin="4,0,0,0"
                                                   Foreground="{StaticResource WaterMarkTextColor}" />
                                    </StackPanel>
                                </xctk:WatermarkTextBox.Watermark>

                            </xctk:WatermarkTextBox>

                            <Button Grid.Column="5"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource DarkYellowColorBrush}"
                                    Command="{Binding Refresh}">
                                <Image Source="/Assets/Refresh.png"
