<Window x:Class="RXL.WPFClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RXL.WPFClient.ViewModels"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="RenegadeX Launcher"
        Icon="/Assets/RenegadeX.ico"
        WindowStartupLocation="CenterScreen"
        Height="945"
        Width="1150"
        MinHeight="945"
        MinWidth="1150"
        MaxHeight="945"
        MaxWidth="1150">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/RXL.WPFClient;component/Assets/bg.jpg"
                        Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border BorderThickness="0,0,0,1"
                BorderBrush="#FFC9BEBE">
            <Grid Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource HeaderTextBlockStyle}"
                               Margin="0,10,0,0"
                               Text="" />

                    <Image Grid.Column="1"
                           Source="/Assets/RenegadeXLogo.png" />

                </Grid>

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal">
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Content="Home" />
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Margin="10,0,10,0"
                            Content="Mutliplayer" />
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Content="Stats" />

                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1"
                    Margin="10,10,10,0"
                    Orientation="Horizontal">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        BorderThickness="1,1,1,5"
                        BorderBrush="Transparent">
                    <Grid Background="{StaticResource ListBackgroundBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="500" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="/Assets/Search.png" />
                        <TextBlock Grid.Column="1"
                                   Text="Search for server:"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource ListHeaderTextColor}" />

                        <xctk:WatermarkTextBox Grid.Column="2"
                                               Watermark="Server Name"
                                               Background="Transparent"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource InfoTextColor2}"
                                               BorderThickness="0"
                                               Text="{Binding SearchString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Button Grid.Column="3"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding Refresh}">
                            <Image Source="/Assets/Refresh.png" />
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Row="1"
                      Grid.IsSharedSizeScope="True"
                      Width="770"
                      HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--  Title  -->
                    <Border Grid.Row="0"
                            BorderThickness="1,1,1,0"
                            BorderBrush="Transparent">
                        <Grid Background="{StaticResource ListBackgroundBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="610"
                                                  SharedSizeGroup="ServerNameColumn" />
                                <ColumnDefinition Width="70"
                                                  SharedSizeGroup="PlayersColumn" />
                                <ColumnDefinition Width="70"
                                                  SharedSizeGroup="LatencyColumn" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal">
                                <TextBlock Text="Server"
                                           Margin="10,0,0,0"
                                           Foreground="{StaticResource ListHeaderTextColor}"
                                           MouseUp="TextBlockMouseUp" />

                                <Image Margin="5,0,0,0"
                                       Tag="Server"
                                       Stretch="Uniform"
                                       Width="13">

                                    <Image.Visibility>
                                        <MultiBinding Converter="{StaticResource SortButtonConverter}">
                                            <Binding RelativeSource="{RelativeSource Self}" />
                                            <Binding Path="SortInverted" />
                                            <Binding Path="CurrentSort" />
                                        </MultiBinding>
                                    </Image.Visibility>

                                </Image>

                            </StackPanel>
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal">
                                <TextBlock Text="Players"
                                           Margin="0,0,0,0"
                                           Foreground="{StaticResource ListHeaderTextColor}"
                                           MouseUp="TextBlockMouseUp" />

                                <Image Margin="5,0,0,0"
                                       Tag="Players"
                                       Stretch="Uniform"
                                       Width="13">

                                    <Image.Visibility>
                                        <MultiBinding Converter="{StaticResource SortButtonConverter}">
                                            <Binding RelativeSource="{RelativeSource Self}" />
                                            <Binding Path="SortInverted" />
                                            <Binding Path="CurrentSort" />
                                        </MultiBinding>
                                    </Image.Visibility>

                                </Image>
                            </StackPanel>
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal">
                                <TextBlock Text="Latency"
                                           Margin="0,0,0,0"
                                           Foreground="{StaticResource ListHeaderTextColor}"
                                           MouseUp="TextBlockMouseUp" />

                                <Image Margin="5,0,0,0"
                                       Tag="Latency"
                                       Stretch="Uniform"
                                       Width="13">

                                    <Image.Visibility>
                                        <MultiBinding Converter="{StaticResource SortButtonConverter}">
                                            <Binding RelativeSource="{RelativeSource Self}" />
                                            <Binding Path="SortInverted" />
                                            <Binding Path="CurrentSort" />
                                        </MultiBinding>
                                    </Image.Visibility>

                                </Image>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <!-- Data -->
                    <ListView x:Name="ServerBrowser"
                              Grid.Row="1"
                              BorderThickness="0"
                              Margin="0"
                              Padding="0"
                              Height="760"
                              Background="Transparent"
                              SelectionMode="Single"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                              ItemsSource="{Binding ServersView}"
                              ItemTemplate="{StaticResource ServerDataTemplate}"
                              MouseDoubleClick="ServerBrowserOnMouseDoubleClick"
                              SelectionChanged="ServerBrowserOnSelectionChanged">
                        <ListView.Resources>
                            <Style TargetType="Thumb">
                                <Setter Property="Foreground"
                                        Value="Yellow" />
                            </Style>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Background"
                                        Value="Transparent" />
                                <Setter Property="BorderThickness"
                                        Value="0" />
                            </Style>
                        </ListView.Resources>
                    </ListView>
                </Grid>
            </Grid>

            <Grid Margin="20,0,0,0"
                  Width="320">
                <Grid.RowDefinitions>
                    <RowDefinition Height="250" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="250" />
                </Grid.RowDefinitions>

                <Image Grid.Row="0"
                       Source="{Binding ElementName=ServerBrowser, Path=SelectedItem.Map, Converter={StaticResource MapImageConverter}}"
                       Stretch="UniformToFill" />

                <StackPanel Grid.Row="0"
                            Orientation="Vertical"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Height="80"
                            Width="320"
                            Background="{StaticResource ListBackgroundBrush}">
                    <StackPanel Orientation="Horizontal"
                                Margin="30,10,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedServer.Players}"
                                   Foreground="{StaticResource ListTextColor}" />
                        <TextBlock Text="/"
                                   Margin="5,0"
                                   Foreground="{StaticResource ListTextColor}" />
                        <TextBlock Text="{Binding SelectedServer.MaxPlayers}"
                                   Foreground="{StaticResource ListTextColor}" />
                        <TextBlock Text="Players"
                                   Margin="5,0,0,0"
                                   Foreground="{StaticResource ListTextColor}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="30,10,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="Players"
                                   Margin="5,0,0,0"
                                   Foreground="{StaticResource ListTextColor}" />
                    </StackPanel>
                </StackPanel>

                <Button Grid.Row="1"
                        Margin="0,10,0,0"
                        BorderBrush="#FFD6BC14"
                        Background="{StaticResource ListBackgroundBrush2}"
                        Command="{Binding JoinSelected}">
                    <TextBlock Text="Join Server"
                               FontSize="30"
                               Foreground="#FFD6BC14" />
                </Button>

                <StackPanel Grid.Row="2"
                            Margin="0,10,0,0"
                            Background="{StaticResource ListBackgroundBrush}"
                            DataContext="{Binding SelectedServer}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0"
                              Margin="20,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="TimeLimit" />

                            <TextBlock Grid.Row="1"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="SpawnCrates" />

                            <TextBlock Grid.Row="2"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="AutoBalance" />

                            <TextBlock Grid.Row="3"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="Bots" />

                            <TextBlock Grid.Row="4"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="SteamRequired" />

                            <TextBlock Grid.Row="5"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="Password" />

                        </Grid>

                        <Grid Grid.Column="1"
                              Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="{Binding ServerSettings.TimeLimit}" />

                            <TextBlock Grid.Row="1"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="{Binding ServerSettings.SpawnCrates, Converter={StaticResource BoolToOnOffConverter}}" />

                            <TextBlock Grid.Row="2"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="{Binding ServerSettings.AutoBalance, Converter={StaticResource BoolToOnOffConverter}}" />

                            <TextBlock Grid.Row="3"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="{Binding Bots}" />

                            <TextBlock Grid.Row="4"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="{Binding ServerSettings.SteamRequired, Converter={StaticResource BoolToOnOffConverter}}" />

                            <TextBlock Grid.Row="5"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="{Binding RequiresPw, Converter={StaticResource BoolToOnOffConverter}}" />

                        </Grid>
                    </Grid>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                   Text="Iets" />
                        <TextBlock Style="{StaticResource ServerInfoTextBlockStyle}"
                                   Text="Iets" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
