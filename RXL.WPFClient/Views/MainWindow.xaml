<Window x:Class="RXL.WPFClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RXL.WPFClient.ViewModels"
        Title="RenegadeX Launcher"
        Icon="/Assets/RenegadeX.ico"
        WindowStartupLocation="CenterScreen"
        Height="945"
        Width="1150"
        MinHeight="945"
        MinWidth="1150"
        MaxHeight="945"
        MaxWidth="1150"
        >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/RXL.WPFClient;component/Assets/bg.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border BorderThickness="0,0,0,1"
                BorderBrush="#FFC9BEBE">
            <Grid Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource HeaderTextBlockStyle}"
                               Margin="0,10,0,0"
                               Text="" />

                    <Image Grid.Column="1"
                           Source="/Assets/RenegadeXLogo.png" />

                </Grid>

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal">
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Content="Home" />
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Margin="10,0,10,0"
                            Content="Mutliplayer" />
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Content="Stats" />

                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1"
                    Margin="10,10,10,0"
                    Orientation="Horizontal">
            <Grid Grid.IsSharedSizeScope="True"
                  Width="770"
                  HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  Title  -->
                <Border Grid.Row="0"
                        BorderThickness="1,1,1,0"
                        BorderBrush="Transparent">
                    <Grid Background="{StaticResource ListBackgroundBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="ServerNameColumn" />
                            <ColumnDefinition SharedSizeGroup="PlayersColumn" />
                            <ColumnDefinition SharedSizeGroup="LatencyColumn" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Server"
                                   Margin="10,0,0,0"
                                   Foreground="{StaticResource ListHeaderTextColor}" />
                        <TextBlock Grid.Column="1"
                                   Text="Players"
                                   Foreground="{StaticResource ListHeaderTextColor}" />
                        <TextBlock Grid.Column="2"
                                   Text="Latency"
                                   Foreground="{StaticResource ListHeaderTextColor}" />
                    </Grid>
                </Border>
                <!-- Data -->
                <ListView x:Name="ServerBrowser"
                          Grid.Row="1"
                          BorderThickness="0"
                          Margin="0"
                          Padding="0"
                          Height="775"
                          Background="Transparent"
                          SelectionMode="Single"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Visible"
                          ItemsSource="{Binding ServersView}"
                          ItemTemplate="{StaticResource ServerDataTemplate}"
                          MouseDoubleClick="ServerBrowserOnMouseDoubleClick"
                          SelectionChanged="ServerBrowserOnSelectionChanged">
                    <ListView.Resources>
                        <Style TargetType="Thumb">
                            <Setter Property="Foreground"
                                    Value="Yellow"></Setter>
                        </Style>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Background"
                                    Value="Transparent"></Setter>
                        </Style>
                    </ListView.Resources>
                </ListView>
            </Grid>

            <Grid Margin="20,0,0,0"
                  Width="320">
                <Grid.RowDefinitions>
                    <RowDefinition Height="250" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="250" />
                </Grid.RowDefinitions>

                <Image Grid.Row="0"
                       Source="{Binding ElementName=ServerBrowser, Path=SelectedItem.Map, Converter={StaticResource MapImageConverter}}"
                       Stretch="UniformToFill" />

                <Button Grid.Row="1"
                        Margin="0,10,0,0"
                        BorderBrush="#FFD6BC14"
                        Background="{StaticResource ListBackgroundBrush2}"
                        Command="{Binding JoinSelected}">
                    <TextBlock Text="Join Server"
                               FontSize="30"
                               Foreground="#FFD6BC14" />
                </Button>

                <StackPanel Grid.Row="2"
                            Margin="0,10,0,0"
                            Background="{StaticResource ListBackgroundBrush}"
                            DataContext="{Binding SelectedServer}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0"
                              Margin="20,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="Password" />

                            <TextBlock Grid.Row="1"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="SpawnCrates" />

                            <TextBlock Grid.Row="2"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="AutoBalance" />

                            <TextBlock Grid.Row="3"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="SteamRequired" />

                        </Grid>

                        <Grid Grid.Column="1"
                              Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="{Binding RequiresPw}" />

                            <TextBlock Grid.Row="1"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="{Binding ServerSettings.SpawnCrates}" />

                            <TextBlock Grid.Row="2"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="{Binding ServerSettings.AutoBalance}" />

                            <TextBlock Grid.Row="3"
                                       Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                       Text="{Binding ServerSettings.SteamRequired}" />

                        </Grid>
                    </Grid>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ServerInfoLabelTextBlockStyle}"
                                   Text="Iets"></TextBlock>
                        <TextBlock Style="{StaticResource ServerInfoTextBlockStyle}"
                                   Text="Iets"></TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
