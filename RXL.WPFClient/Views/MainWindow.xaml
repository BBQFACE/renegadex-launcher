<Window x:Class="RXL.WPFClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RXL.WPFClient.ViewModels"
        Title="MainWindow"
        Icon="/Assets/RenegadeX.ico"
        Height="900"
        Width="1150"
        MinHeight="900"
        MinWidth="1150">
    <Window.DataContext>
        <!-- Declaratively create an instance of our SongViewModel -->
        <local:ServersViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/RXL.WPFClient;component/Assets/bg.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border BorderThickness="0,0,0,1"
                BorderBrush="#FFC9BEBE">
            <Grid Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource HeaderTextBlockStyle}"
                               Margin="0,10,0,0"
                               Text="LOL" />

                    <Image Grid.Column="1"
                           Source="/Assets/RenegadeXLogo.png" />

                </Grid>

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal">
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Content="Home" />
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Margin="10,0,10,0"
                            Content="Mutliplayer" />
                    <Button Style="{StaticResource MenuButtonStyle}"
                            Width="150"
                            Content="Stats" />

                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1"
                    Margin="10,10,10,0">
            <ScrollViewer Height="775">
                <Grid Grid.IsSharedSizeScope="True"
                      Width="750"
                      HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--  Title  -->
                    <Border Grid.Row="0"
                            BorderThickness="1,1,1,0"
                            BorderBrush="Transparent">
                        <Grid Background="{StaticResource ListBackgroundBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition SharedSizeGroup="ServerNameColumn" />
                                <ColumnDefinition SharedSizeGroup="PlayersColumn" />
                                <ColumnDefinition SharedSizeGroup="LatencyColumn" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Server"
                                       Margin="10,0,0,0"
                                       Foreground="{StaticResource ListHeaderTextColor}" />
                            <TextBlock Grid.Column="1"
                                       Text="Players"
                                       Foreground="{StaticResource ListHeaderTextColor}" />
                            <TextBlock Grid.Column="2"
                                       Text="Latency"
                                       Foreground="{StaticResource ListHeaderTextColor}" />
                        </Grid>
                    </Border>
                    <!-- Data -->
                    <ListView Grid.Row="1"
                              BorderThickness="0"
                              Margin="0"
                              Padding="0"
                              Background="Transparent"
                              ItemsSource="{Binding Servers}"
                              ItemTemplate="{StaticResource ServerDataTemplate}">
                    </ListView>
                </Grid>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
