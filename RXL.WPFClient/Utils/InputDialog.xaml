<Window x:Class="RXL.WPFClient.Utils.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen" 
        SizeToContent="WidthAndHeight"
        MinWidth="300"
        MinHeight="100"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    <StackPanel Margin="5">
        <TextBlock Name="Request" Margin="5"/>
        <TextBox Name="Input" Margin="5"/>
        <PasswordBox Name="PasswordInput" Margin="5"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="_Ok" IsDefault="True" Margin="5" Click="Ok" />
            <Button Content="_Cancel" IsCancel="True" Margin="5" Click="Cancel" />
        </StackPanel>
    </StackPanel>
</Window>
